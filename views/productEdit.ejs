<h2>Edit Product</h2>

<!-- Display errors if there are any -->
<% if (errors) { %>
<div>
  <% errors.forEach(function(error) { %>
  <p><%= error.msg %></p>
  <% }); %>
</div>
<% } %>

<!-- Form to Edit Product -->
<form action="/products/<%= product.id %>?_method=PUT" method="POST">
  <label for="name">Product Name:</label>
  <input
    type="text"
    id="name"
    name="name"
    value="<%= typeof formData !== 'undefined' ? formData.name : product.name %>"
    required
  />

  <label for="price">Price:</label>
  <input
    type="number"
    id="price"
    name="price"
    step="0.01"
    value="<%= typeof formData !== 'undefined' ? formData.price : product.price %>"
    required
  />

  <label for="quantity">Quantity:</label>
  <input
    type="number"
    id="quantity"
    name="quantity"
    value="<%= typeof formData !== 'undefined' ? formData.quantity : product.quantity %>"
    required
  />

  <button type="submit">Update Product</button>
</form>
<a href="/products">Back to Product List</a>
