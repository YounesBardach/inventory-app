<h2>Edit Sale</h2>

<!-- Display errors if there are any -->
<% if (errors) { %>
<div>
  <% errors.forEach(function(error) { %>
  <p><%= error.msg %></p>
  <% }); %>
</div>
<% } %>

<!-- Form to Edit Sale -->
<form action="/sales/<%= sale.id %>?_method=PUT" method="POST">
  <label for="quantity_sold">Quantity Sold:</label>
  <input
    type="number"
    id="quantity_sold"
    name="quantity_sold"
    value="<%= typeof formData !== 'undefined' ? formData.quantity_sold : sale.quantity_sold %>"
    required
  />

  <label for="total_sale">Total Sale:</label>
  <input
    type="number"
    id="total_sale"
    name="total_sale"
    step="0.01"
    value="<%= typeof formData !== 'undefined' ? formData.total_sale : sale.total_sale %>"
    required
  />

  <label for="product_id">Product ID:</label>
  <input
    type="number"
    id="product_id"
    name="product_id"
    value="<%= typeof formData !== 'undefined' ? formData.product_id : sale.product_id %>"
    required
  />

  <button type="submit">Update Sale</button>
</form>

<a href="/sales">Back to Sale List</a>
